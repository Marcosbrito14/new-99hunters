<p id="notice"><%= notice %></p>

<h1>Lista de Candidatos</h1>
<h3><%= @vaga.titulo %></h3>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Escolaridade</th>
      <th>Exp profissional</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidatos.each do |candidato| %>
      <tr>
        <td><%= candidato.nome %></td>
        <td><%= candidato.email %></td>
        <td><%= candidato.telefone %></td>
        <td><%= candidato.escolaridade %></td>
        <td><%= candidato.exp_profissional %></td>
        <td><%= link_to 'Perfil', candidato_path(@vaga, candidato) %></td>
        <td><%= link_to 'Editar', edit_candidato_path(@vaga, candidato) %></td>
        <td><%= link_to 'Apagar', candidato_path(@vaga, candidato), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul>
  <li><%= link_to 'Novo Candidato', new_candidato_path %></li>
  <li><%= link_to 'Voltar', vagas_path %></li>
</ul>
